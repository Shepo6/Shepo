		<datadir zip="true">https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/</datadir>
	</dir>
	<dir>
		<info compressed="false">https://raw.githubusercontent.com/jsergio123/zips/master/addons.xml</info>
