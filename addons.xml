<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.ShepoWizard" name="Shepo Wizard" version="0.2.3" provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo Wizard</summary>
    <description lang="en">The Shepo Wizard is the home of the Shepo Builds. Thanks to all Devs who have contributed to this project.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.bob.unleashed" name="BoB Unleashed" version="1.0.13" provider-name="midraal">
    <requires>
        <import addon="xbmc.python" version="2.19.0" />
        <import addon="script.module.nanscrapers" version="0.5.5" />
        <import addon="script.module.python.koding.aio" version="0.9.6.6" />
        <import addon="script.module.beautifulsoup" version="3.2.1" />
        <import addon="script.module.requests" version="2.9.1" />
        <import addon="script.module.addon.common" version="2.0.0" />
        <import addon="script.module.xmltodict" version="0.9.0" />
        <!--<import addon="script.module.web-pdb" version="1.0"/>-->
        <import addon="script.module.urlresolver" version="1.2.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="[login|startup]" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Bob's little sister</summary>
        <description lang="en">Bob's little sister</description>
        <platform>all</platform>
        <website>www.noobsandnerds.com</website>
        <video_guide>xtOqLY5PJDY</video_guide>
    </extension>
</addon>

<addon id="plugin.video.littlerascals"
	name="Little Rascals"
	version="0.0.5"
	provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
    <import addon="plugin.video.youtube" version="5.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo</summary>
    <description lang="en">Little Rascals provides videos from your favourites youtubers. The creator of this addon does not control the content of these streams. Viewer discretion is advised.</description>
    <platform>all</platform>
    <forum></forum>
    <website></website>
  </extension>
</addon>

<addon id="repository.Shepo" name="Shepo Repo" version="0.0.8" provider-name="Shepo">
	<extension point="xbmc.addon.repository" name="Shepo Repo">
		<info compressed="false">https://raw.github.com/Shepo6/Shepo/master/addons.xml</info>
		<checksum>https://raw.github.com/Shepo6/Shepo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/Shepo6/Shepo/master/</datadir>
	</extension>

	<extension point="xbmc.addon.metadata">
		<summary>Shepo Repository</summary>
		<description>Home of the Shepo Wizard</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
