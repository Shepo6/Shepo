<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.ShepoWizard" name="Shepo Wizard" version="0.2.3" provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo Wizard</summary>
    <description lang="en">The Shepo Wizard is the home of the Shepo Builds. Thanks to all Devs who have contributed to this project.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.littlerascals"
	name="Little Rascals"
	version="0.0.5"
	provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
    <import addon="plugin.video.youtube" version="5.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo</summary>
    <description lang="en">Little Rascals provides videos from your favourites youtubers. The creator of this addon does not control the content of these streams. Viewer discretion is advised.</description>
    <platform>all</platform>
    <forum></forum>
    <website></website>
  </extension>
</addon>
</addons>
