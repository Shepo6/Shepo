<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.ShepoWizard" name="Shepo Wizard" version="0.1.9" provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo Wizard</summary>
    <description lang="en">The Shepo Wizard is the home of the Shepo Builds. Thanks to all Devs who have contributed to this project.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.Shepo" name="Shepo Repo" version="0.0.3" provider-name="Shepo">
	<extension point="xbmc.addon.repository" name="Shepo Repo">
		<info compressed="false">https://raw.github.com/Shepo6/Shepo/master/addons.xml</info>
		<checksum>https://raw.github.com/Shepo6/Shepo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/Shepo6/Shepo/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Shepo Repository</summary>
		<description>Home of the Shepo Wizard</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
