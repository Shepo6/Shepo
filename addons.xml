<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.ShepoWizard" name="Shepo Wizard" version="0.2.4" provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo Wizard</summary>
    <description lang="en">The Shepo Wizard is the home of the Shepo Builds. Thanks to all Devs who have contributed to this project.</description>
    <platform>all</platform>
  </extension>
</addon>

