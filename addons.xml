<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.ShepoWizard" name="Shepo Wizard" version="0.2.3" provider-name="Shepo">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Shepo Wizard</summary>
    <description lang="en">The Shepo Wizard is the home of the Shepo Builds. Thanks to all Devs who have contributed to this project.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.kryptonite" name="Kryptonite" version="1.1" provider-name="Shepo">
    <requires>
        <import addon="xbmc.python" version="2.19.0" />
        <import addon="script.module.universalscrapers" version="1.0.0" />
        <import addon="script.module.python.koding.aio" version="0.9.6.6" />
        <import addon="script.module.beautifulsoup" version="3.2.1" />
        <import addon="script.module.requests" version="2.9.1" />
        <import addon="script.module.addon.common" version="2.0.0" />
        <import addon="script.module.xmltodict" version="0.9.0" />
        <!--<import addon="script.module.web-pdb" version="1.0"/>-->
        <import addon="script.module.resolveurl" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="[login|startup]" />
    <extension point="xbmc.addon.metadata">
      <summary lang="en">Kryptonite offers Movies, TV Shows, Kids, Concerts for the community to enjoy!!</summary>
      <summary lang="he"></summary>
      <description lang="en"></description>
      <description lang="he"></description>
      <disclaimer lang="en">The author of this addon do not host any of the content which is found and have no affiliation with any of the content providers. This addon simply searches websites for content. Use at your own risk!</disclaimer>
      <disclaimer lang="he">מחבר ההרחבה זה אינו מארח את התוכן שיתכן ויימצא ואין לו זיקה לאף אחד מספקי התוכן. הרחבה רק מחפשת תוכן שקיים באתרי אינטרנט. השימוש בהרחבה הוא על אחריותך בלבד!</disclaimer>
      <platform>all</platform>
        <website></website>
        <video_guide></video_guide>
        <assets>
          <icon>icon.png</icon>
          <fanart>fanart.jpg</fanart>
          <screenshot>resources/screenshots/Screenshot_1.png</screenshot>
          <screenshot>resources/screenshots/Screenshot_2.png</screenshot>
      	</assets>
    </extension>
</addon>

